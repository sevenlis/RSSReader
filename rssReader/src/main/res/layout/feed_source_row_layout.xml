<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/source_row"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/nav_header_vertical_spacing"
    >

    <CheckBox
        android:id="@+id/checkBox_source_enabled"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:paddingRight="@dimen/nav_header_vertical_spacing"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_source_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source name"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textView_source_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Source link"/>
    </LinearLayout>
</LinearLayout>
